---
import { getFilmById } from '../../../backend/backend.mjs';
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
const film = await getFilmById(id);

if (!film) {
    return Astro.redirect('/films');
}
---

<Layout>
  <div class="bg-gray-100 min-h-screen flex items-center justify-center py-10">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl w-full">
      <div class="md:flex">
        <div class="md:w-1/3">
          <img 
            src={film.imageUrl} 
            alt={`Affiche de ${film.titre_film}`} 
            class="w-full h-full object-cover"
          />
        </div>
        
        <div class="md:w-2/3 p-6">
          <h1 class="text-3xl font-bold text-gray-800 mb-2">{film.titre_film}</h1>
          <p class="text-sm text-gray-500 mb-4"> {film.duree_film} min • {film.langue}</p>
          
          <div class="mb-4">
            <div class="flex items-center">
              <span class="font-bold">{film.production}</span>
            </div>
          </div>
          
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-2">Synopsis</h2>
            <p class="text-gray-700" set:html={film.synopsis_film}></p>
          </div>
          
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-2">Informations</h2>
            <ul class="space-y-2 text-gray-700">
              <li><span class="font-medium">Réalisateur :</span> {film.realisateur}</li>
              <li><span class="font-medium">Acteurs :</span> {film.list_acteur}</li>
            </ul>
          </div>
          
          <div class="mt-6">
            <a href="/films" class="inline-block bg-indigo-600 text-white py-2 px-6 rounded-md hover:bg-indigo-700 transition">
              Retour aux films
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
