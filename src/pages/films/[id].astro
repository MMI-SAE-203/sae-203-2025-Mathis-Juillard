---
import { getFilms } from '../../../backend/backend.mjs';
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
const films = await getFilms(id);

if (!films) {
    return Astro.redirect('/films');
}
---

<Layout>
  <div class="bg-gray-100 min-h-screen flex items-center justify-center py-10">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl w-full">
      <div class="md:flex">
        <div class="md:w-1/3">
          <img 
            src={films.affiche_film || "/placeholder.jpg"} 
            alt={`Affiche de ${films.titre_film}`} 
            class="w-full h-full object-cover"
          />
        </div>
        
        <div class="md:w-2/3 p-6">
          <h1 class="text-3xl font-bold text-gray-800 mb-2">{films.titre_film}</h1>
          <p class="text-sm text-gray-500 mb-4"> {films.duree_film} min • {films.langue}</p>
          
          <div class="mb-4">
            <div class="flex items-center">
              <span class="text-yellow-500 text-xl mr-1">★</span>
              <span class="font-bold">{films.production}/10</span>
            </div>
          </div>
          
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-2">Synopsis</h2>
            <p class="text-gray-700">{films.synopsis}</p>
          </div>
          
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-2">Informations</h2>
            <ul class="space-y-2 text-gray-700">
              <li><span class="font-medium">Réalisateur :</span> {films.realisateur}</li>
              <li><span class="font-medium">Acteurs :</span> {films.acteurs}</li>
              <li><span class="font-medium">Pays :</span> {films.pays}</li>
            </ul>
          </div>
          
          <div class="mt-6">
            <a href="/films" class="inline-block bg-indigo-600 text-white py-2 px-6 rounded-md hover:bg-indigo-700 transition">
              Retour aux films
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>