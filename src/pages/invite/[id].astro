---
import { getInvites } from '../../../backend/backend.mjs';
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;
const invites = await getInvites();
const invite = invites.find(inv => inv.id === id);

if (!invite) {
    return Astro.redirect('/invite');
}
---

<Layout>
  <div class="bg-gray-100 min-h-screen flex items-center justify-center py-10">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-4xl w-full">
      <div class="md:flex">
        <div class="md:w-1/3">
          <img 
            src={invite.imageUrl || "/placeholder.jpg"} 
            alt={`Photo de ${invite.prenom} ${invite.nom}`} 
            class="w-full h-full object-cover"
          />
        </div>
        
        <div class="md:w-2/3 p-6">
          <h1 class="text-3xl font-bold text-gray-800 mb-2">{invite.prenom} {invite.nom}</h1>
          <p class="text-sm text-gray-500 mb-4"><strong>Rôle :</strong> {invite.Role}</p>
          
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-2">Biographie</h2>
            <p class="text-gray-700" set:html={invite.biographie || "Aucune biographie disponible."}></p>
          </div>

          <div class="mt-6">
            <a href="/invite" class="inline-block bg-indigo-600 text-white py-2 px-6 rounded-md hover:bg-indigo-700 transition">
              Retour aux invités
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
